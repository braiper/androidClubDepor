<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background_gradient"
    android:fillViewport="true"
    tools:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/cont1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|center_horizontal"
                android:text="Registro de Pago"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="28sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/rounded_card"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etCampoDNI"
                    android:layout_width="306dp"
                    android:layout_height="56dp"
                    android:background="@drawable/edit_text_background"
                    android:ems="10"
                    android:hint=" Introduce el n° de DNI"
                    android:inputType="number"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#80FFFFFF"
                    tools:textColorHint="#80FFFFFF" />

                <ImageView
                    android:id="@+id/icoBuscar"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@android:drawable/ic_menu_search" />
            </LinearLayout>


            <TextView
                android:id="@+id/txtDatosCliente"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:alpha="@android:dimen/config_motionStandardFastEffectDamping"
                android:text="Apellido y Nombre"
                android:textColor="#8CFFFFFF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Tipo de membresía"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rbSocio2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:text="Socio"
                    android:textColor="#FFFFFF" />

                <RadioButton
                    android:id="@+id/rbNoSocio2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="No Socio"
                    android:textColor="#FFFFFF" />

            </RadioGroup>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="8dp"
                android:text="Monto"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etCampoMonto"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/edit_text_background"
                android:ems="10"
                android:hint=" $"
                android:inputType="number"
                android:textColor="#FFFFFF"
                android:textColorHint="#80FFFFFF" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="8dp"
                android:text="Forma de Pago"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rbEfectivo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:text="Efectivo"
                    android:textColor="#FFFFFF" />

                <RadioButton
                    android:id="@+id/rbTarjeta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tarjeta"
                    android:textColor="#FFFFFF" />

            </RadioGroup>

            <Button
                android:id="@+id/btPagar"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:drawableLeft="@android:drawable/checkbox_on_background"
                android:text="Registrar PAGO"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btComprobante"
                android:layout_width="182dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawableLeft="@android:drawable/ic_menu_view"
                android:text="Ver COMPROBANTE"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                android:text="Últimos pagos"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/button_secondary"
                android:nestedScrollingEnabled="false" />

            <Button
                android:id="@+id/btnVolver2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VOLVER" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
